<Layout xmlns="urn:speedata.de:2009/publisher/en"
	xmlns:sd="urn:speedata:2009/publisher/functions/en">

	<LoadFontfile name="serif" filename="CrimsonPro-Regular.ttf" mode="harfbuzz" />
	<DefineFontfamily fontsize="10" leading="12" name="cp">
		<Regular fontface="serif" />
	</DefineFontfamily>

	<Pageformat height="10cm" width="6cm" />
	<Record element="data">
		<PlaceObject>
			<Textblock width="4">
				<Paragraph>
					<Color name="red">
						<U><Value>Some text</Value></U>
					</Color>
				</Paragraph>
				<Paragraph color="green">
    				<U><Value select="'A wonderful serenity has taken possession of my entire soul, like these sweet mornings of spring which I enjoy with my whole heart.'"/></U>
				</Paragraph>
			</Textblock>
		</PlaceObject>
		<PlaceObject column="1">
			<Textblock width="4" color="blue">
				<Paragraph>
					<Color name="red">
						<U><Value>Some text</Value></U>
					</Color>
				</Paragraph>
				<Paragraph>
    				<U><Value select="'A wonderful serenity has taken possession of my entire soul, like these sweet mornings of spring which I enjoy with my whole heart.'"/></U>
				</Paragraph>
			</Textblock>
		</PlaceObject>
		<PlaceObject>
			<Textblock>
				<Paragraph>
					<U>
						<Value>Test - Underlined Title</Value>
					</U>
				</Paragraph>
				<Paragraph fontfamily="cp">
					<U>
						<Value>Test - Underlined Title</Value>
					</U>
				</Paragraph>
			</Textblock>
		</PlaceObject>

	</Record>
</Layout>
