    <Pageformat height="4cm" width="6cm"/>
    <LoadFontfile name="newathena" filename="newathu5_5.ttf" />

    <DefineFontfamily fontsize="10" leading="12" name="text">
        <Regular fontface="newathena" />
    </DefineFontfamily>

    <Record element="data">
        <PlaceObject allocate="no">
            <Textblock>
                <Paragraph>
                    <ForAll select="element">
                        <Span language="Other">
                            <Value select="@attr" />
                        </Span>
                        <HSpace leader="." />
                        <Value select='123' />
                        <Br />
                    </ForAll>
                </Paragraph>
            </Textblock>
        </PlaceObject>
    </Record>
</Layout>