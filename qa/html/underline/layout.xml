<Layout xmlns="urn:speedata.de:2009/publisher/en"
    xmlns:sd="urn:speedata:2009/publisher/functions/en">
    <Pageformat height="4cm" width="5cm"></Pageformat>
    <Record element="data">
        <PlaceObject>
            <Textblock>
                <ForAll select="a">
                    <Paragraph>
                        <Value select="sd:decode-html(.)"></Value>
                    </Paragraph>
                </ForAll>
            </Textblock>
        </PlaceObject>
    </Record>
</Layout>